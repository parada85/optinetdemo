{# src/Acme/BlogBundle/Resources/views/Blog/index.html.twig #} 

{% extends 'miomioBundle:Default:index.html.twig' %}

{% block title %}{% trans %}Nueva reserva{% endtrans %}:{% endblock %}
{% block body %}
 <h3>{% trans %}Seleccione el cliente para realizar la reserva{% endtrans %}:</h3>

<table cellpadding="0" cellspacing="0" border="0" class="display" id="tablaseleccion">
  <thead>
    <tr>
	   <th>{% trans %}Dni{% endtrans %}</th>
   	 <th>{% trans %}Nombre{% endtrans %}</th>
   	 <th>{% trans %}Apellido1{% endtrans %}</th>
   	 <th>{% trans %}Apellido2{% endtrans %}</th>
   	 <th>{% trans %}Acciones{% endtrans %}</th>
    </tr>
  </thead>
  
  <tbody>
      {% for cliente in clientes %}

    <tr>
          <td>{{ cliente.dni }}</td>
          <td>{{ cliente.nombre |capitalize }}</td>
          <td>{{ cliente.apellido1 |capitalize }}</td>
          <td>{{ cliente.apellido2 |capitalize }}</td>
      		<td><a class="boton" href="{{ path('nueva_reserva', { 'id': cliente.id }) }}">{% trans %}Seleccionar{% endtrans %}</a></td>
		</tr>
  {% endfor %}
 </tbody>
 
 <tfoot>
		 <tr>
	 <th>{% trans %}Dni{% endtrans %}</th>
   	 <th>{% trans %}Nombre{% endtrans %}</th>
   	 <th>{% trans %}Apellido1{% endtrans %}</th>
   	 <th>{% trans %}Apellido2{% endtrans %}</th>
   	 <th>{% trans %}Acciones{% endtrans %}</th>
    </tr>
	</tfoot>
	
 </table>
{% endblock %}