    <link id="hojaestilo" rel="stylesheet" type="text/css" href="{{ asset('bundles/miomio/css/temas/'~app.user.tema~'/jquery-wijmo.min.css') }}" media="screen">
   {% endif %} 
{% endblock %}

    {% block jquerys %}

    <script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/ColVis.min.js') }}"></script>
    <script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/media/js/TableTools.min.js') }}"></script>
    <script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/media/js/ZeroClipboard.min.js') }}"></script>
    <script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/fullcalendar.min.js') }}"></script>
    <script type="text/javascript" defer language="javascript" src="{{ asset('bundles/miomio/js/jquery.qtip.min.js') }}"></script>

    {% endblock %}

{% block cambioidioma %}
{% if app.session.locale == 'en' %}

